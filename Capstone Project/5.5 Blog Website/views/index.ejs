<%- include("header.ejs") %>

    <!-- Main Content -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <% if(data.length == 0) { %>
                    <div class="blog-post mb-40">
                        <h2 class="blog-post-title">No Title</h2>
                        <p class="blog-post-meta">No Description</p>
                    </div>
                    <% } else { %>
                        <% data.forEach(function(item,index) { %>
                            <div class="blog-post mb-4">
                                <h2 class="blog-post-title">
                                    <%= item.title %>
                                </h2>
                                <p class="blog-post-meta">
                                    <%= currentDate %> by
                                        <a href="#">
                                            <%= item.name %>
                                        </a>
                                </p>
                                <p>
                                    <%= item.description %>
                                </p>
                                <button class="btn btn-primary" data-toggle="modal" data-target="#updateModal" onclick="updateIndex(<%= index %>,<%= JSON.stringify(item) %>)">Update</button>
                                <button class=" btn btn-danger" onclick="deleteItem(<%= index %>)">Delete</button>
                                <hr>
                            </div>
                            <% }); %>
                                <% } %>
            </div>
        </div>
    </div>

    <%- include("footer.ejs") %>